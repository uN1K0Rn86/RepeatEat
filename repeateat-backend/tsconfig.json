{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@repeateat/shared": ["../shared/src/index.ts"]
    }
  },
  "include": ["src", "../shared/src", "../shared/tsconfig.json"],
  "references": [{ "path": "../shared" }]
}
